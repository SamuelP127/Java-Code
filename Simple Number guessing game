import java.util.Random;
import java.util.Scanner;
public class Main {
    public static void main(String[]args){
        Random rand = new Random();
        Scanner s = new Scanner(System.in);
        int max = 101;
        int randNum = rand.nextInt(max);
        boolean game = true;
        int guess;
        System.out.println("Guess the number 0 - 100!");
        while(game){
            guess = s.nextInt();
            if(guess < randNum){
                System.out.println("The secret number is higher!");
            } else if (guess > randNum) {
                System.out.println("The secret number is lower!");
            } else{
                System.out.println("You got it the secret number is " + randNum + "!");
                break;
            }
        }
    }
}
